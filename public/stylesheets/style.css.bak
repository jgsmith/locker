html {
    height: 100%;
}

body { 
    background-color: #ffffff;
    color: #46494c;
    margin: 0px;
    padding: 0px;
    height: 100%;
}

#header {
    background-color: #e3e6ea;
    border-bottom: 1px solid #500000; 
}

#header a {
    text-decoration: none;
    color: #46494c;
}

#footer {
    background-color: #e3e6ea;
    text-align: center;
     border-top: 1px solid #500000;
/*    position: absolute; 
    bottom: 0;
    left: 0px; */
    /* width: 100%; */
    padding: 4px;
}

#footer p {
    font-size: 90%;
}

#content {
    padding: 5px;
}

#header h1.title {
    padding: 4px;
    margin: 0px;
    font-size: 30px;
    color: #46494c;
}

.message {
    display: block;
    background-color: #88ff88;
    border: 1px solid #448844;
    /* color: #66AA66; */
}

.error {
    display: block;
    background-color: #ff8888;
    border: 1px solid #884444;
/*    color: #CC4444; */
}

.form-body {
    border: 1px dotted #ccccc;
    margin: 3px;
    padding: 3px;
    background-color: #eeeeee;
    max-width: 36em;
    margin-left: auto;
    margin-right: auto;
    display: block;
}

.form-selection-option {
    display: block;
}

.form-buttons {
    text-align: center;
    display: block;
    margin-top: 3px;
}

.form-group {
    border: 1px solid #cccccc;
    padding: 3px;
    margin: 3px;
    display: block;
}

.form-group-elements .form-element-label {
    display: none;
}

.form-element {
    display: block;
}

.container-title {
    font-size: 140%;
    font-weight: bolder;
}

.logged-in-as {
    float: right;
    margin-right: 10px;
    margin-top: 8px;
    font-size: 15px;
}

ol.timeline {
    padding: 3px;
    margin: 3px;
    border: 1px solid #cccccc;
}

ol.timeline li {
    display: inline;
    margin: 0px;
    padding-right: 3px;
    padding-left: 7px;
    color: #888888;
}

ol.timeline li+li {
    border-left: 1px solid #cccccc;
}

ol.timeline li.current {
    color: #000000;
    font-weight: bold;
}

.message-read {
}

.message-unread {
    font-weight: bold;
}
